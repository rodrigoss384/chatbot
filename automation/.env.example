# Configurações Gerais
NODE_ENV=production
INSTALLATION_ENV=docker
# Domínio base (ex: seu-dominio.com)
DOMAIN_NAME=seu-dominio.com

# Evolution API
SERVER_URL=https://evolution.seu-dominio.com
AUTHENTICATION_API_KEY=mude_para_sua_api_key_segura_aqui
INSTANCE_NAME=MinhaInstancia

# Banco de Dados Evolution
POSTGRES_USER=evolution_user
POSTGRES_PASSWORD=mude_esta_senha_db_evolution
POSTGRES_DB=evolution_db
CONNECTION_URI=postgresql://evolution_user:mude_esta_senha_db_evolution@postgres:5432/evolution_db

# Chatwoot
CHATWOOT_URL=https://chatwoot.seu-dominio.com
POSTGRES_USER_CHATWOOT=chatwoot_user
POSTGRES_PASSWORD_CHATWOOT=mude_esta_senha_db_chatwoot
POSTGRES_DB_CHATWOOT=chatwoot
# Gere uma chave aleatória grande (ex: `openssl rand -hex 64`)
SECRET_KEY_BASE=substitua_por_uma_hash_longa_e_aleatoria_aqui
REDIS_PASSWORD=mude_esta_senha_redis

# n8n
WEBHOOK_URL=https://n8n.seu-dominio.com
# Gere uma chave aleatória
N8N_ENCRYPTION_KEY=mude_esta_chave_n8n
N8N_USER_MANAGEMENT_JWT_SECRET=mude_este_jwt_secret_n8n

# Cloudflare Tunnel
# Se usar tunnel, coloque o token aqui
CLOUDFLARE_TUNNEL_TOKEN=seu_token_aqui